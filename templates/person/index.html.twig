{% extends 'template.html.twig' %}

{% block title %}persons list{% endblock %}

{% block body %}
<div class="row">
    {% for person in persons %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ person.id }}.{{ person.name }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ person.firstname}} {{ person.name}} </h6>
            <p class="card-text">Age: {{ person.age }}</p>
            <a href="{{ path('person.detail',{'id': person.id }) }}" class="card-link">detail </a>
            <a href="{{ path('person.delete',{'id': person.id }) }}" class="card-link">delete </a>
            <a href="{{ path('person.edit',{'id': person.id }) }}" class="card-link">edit </a>

        </div>
    </div>
    {% endfor %}


    {% if isPaginated is defined and isPaginated %}
        <div class="row mt-3">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    {% if page!=1 %}
                    <li class="page-item"><a class="page-link" href="{{ path('person.list.all',{'page':page-1}) }}">Previous</a></li>
                    {% endif %}
                    {% for page in range(1, nbPages) %}
                    <li class="page-item"><a class="page-link" href="{{ path('person.list.all',{'page':page,'number':number}) }}">{{ page }}</a></li>
                    {% endfor %}
                    {% if page!=nbPages %}
                    <li class="page-item"><a class="page-link" href="{{ path('person.list.all',{'page':page+1}) }}">Next</a></li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    {% endif %}
</div>
{% endblock %}
